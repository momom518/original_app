<div class='top'>
  <div class='top-user'>
    <div class='top-message'>
      <h4 class='top-user-info'>管理者ユーザーです</h4>
    </div>
    <div class='top-list'>
      <%= link_to '管理している店舗一覧', shops_path, class: "shops-index" %>
      <%= link_to '新しい店舗を追加', new_shop_path, class: "add-shop" %>
      <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout"%>
    </div>
    <div class='top-image'>
      <%= image_tag 'top_image.jpg', class:'top-image-sale'%>
    </div>
  </div>
  
  <div class='sales-list'>
    <div class='sales-info'>
      <h3 class='sales-message'>今日のセール情報</h3>
    </div>

    <div class='sale-data'>
      <%# 今日のセール情報があるかどうか判定%>
      <% if @sales.present?%>
        <% @sales.each do|sale|%>
          <%# 管理者ユーザーが管理している店のセール情報のみ表示%>
          <% if current_user.id = sale.shop.user.id %>
            <div class='sale-information'>
              <div class='sale-shop'>
                <%= image_tag sale.shop.image, class:'sale-shop-image'%>
                <%= sale.shop.company_name%>
                <%= sale.shop.shop_name%>
              </div>
              <div class='heading'>
                <%= sale.heading%>
              </div>
              <%= image_tag sale.image, class:'sale-image'%>
              <div class='sale-hour'>
                ＜セール開催時刻＞<br>
                <%= sale.start_time.strftime("%H:%M")%>
                〜
                <%= sale.end_time.strftime("%H:%M")%>
              </div>
              <div class='sale-info'>
                ＜詳細＞<br>
                <%= sale.info%>
              </div>
              <div class='sale-caution'>
                ＜備考＞<br>
                <div class='message'>
                  <%= sale.caution%>
                </div>
              </div>
              <div class='sale-btn'>
                <%= link_to '削除', sale_path(sale.id), method: :delete,class:'sale-delete' %>
              </div>
            </div>
          <%else%>
            今日のセール情報はありません
          <% end %>
        <%end%>
      <%else%>
        今日のセール情報はありません
      <%end%>
      </div>
    </div>

  </div>
</div>