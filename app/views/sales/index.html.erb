<%= render 'shared/header' %>
  <ul class='menu-list'>
    <%# ユーザーがログイン状態かどうかで表示を変化させる %>
    <% if user_signed_in? && current_user.admin? %>
      <%= render 'shared/admin_sales'%>
    <% elsif user_signed_in? %>
      <%= render 'shared/user_sales'%>
    <% else %>
      <h4>サインインしていません</h4>
      <li><%= link_to 'ログイン', new_user_session_path, method: :get , class: "login" %></li>
      <li><%= link_to '新規登録', new_user_registration_path, method: :get , class: "sign-up" %></li>
    <% end %>
  </ul>
