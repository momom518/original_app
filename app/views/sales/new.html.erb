<%= render 'shared/header' %>

<%= form_with model: [@shop, @sale], url: shop_sales_path, method: :post, class:'registration-main', local: true do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      <h2 class='form-header-text'>
        <%= @shop.company_name%><%= @shop.shop_name%>セール情報入力
      </h2>
      <%# <div class='form-header-image'> %>
         <%#= image_tag @shop.image, class: "shop-img"%>
      <%# </div> %>
    </div>

    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">商品の画像等</label>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image %>
      </div>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">見出し ＜40字以内＞</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :heading, class:"input-default", placeholder:"夕方５時からの夕市セール！", maxlength:"40" %>
    </div>
    
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">セール詳細 ＜40字以内＞</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :info, class:"input-default", placeholder:"本日はキャベツ、大根、ほうれんそうが98円です。", maxlength:"40" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">備考 ＜40字以内＞</label>
      </div>
      <%= f.text_area :caution, class:"input-default", placeholder:"キャベツ、大根、ほうれん草はお一家族様につき１個までです。", maxlength:"40" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">日付</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.date_select :day, {}, class: 'sale_date' %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">開始日時</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.datetime_select :start_time, {}, class: 'sale_start_time' %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">終了日時</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.datetime_select :end_time, {}, class: 'sale_end_time' %>
    </div>

    <div class="submit-btn">
      <%= f.submit '新規登録',class:"submit-red-btn" %>
    </div>

  </div>

<% end %>
